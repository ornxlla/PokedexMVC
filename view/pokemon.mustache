<body>
<form action="./index.php" method="get">
    <input type="hidden" name="module" value="pokemon">
    <input type="hidden" name="action" value="busquedaPokemon">
    <input class="buscador" type="text" name="campoABuscar" id="campoABuscar"  placeholder="Ingrese el nombre, tipo o número de Pokémon">
    <input class="botonBuscar" type="submit" name="busqueda" value="Buscar">
</form>
<a class="subirPokemon" href="./index.php?action=subirPokemon">Subir Pokemon</a>
<div class="container mt-5">
    <div style="display: flex; flex-wrap: wrap;">
        {{#pokemon}}
            <a href="./index.php?action=vistaPokemon&id={{id_pokemon}}">
            <div class="pokemon-card">
                <p class="campo_del_pokemon"><strong>ID:</strong> {{id_pokemon}}</p>
                <p class="campo_del_pokemon"><strong>Nombre:</strong> {{nombre}}</p>
                <p class="campo_del_pokemon"><strong>Tipo 1:</strong> {{tipo1}}</p>
                <p class="campo_del_pokemon"><strong>Tipo 2:</strong> {{tipo2}}</p>
                <div class="infoPokemon">
                    <img src="./public/image/tipo_{{tipo1}}.png" alt="{{tipo1}}">
                </div>
                <div class="tipoPokemon">
                    <img src="./public/image/tipo_{{tipo2}}.png" alt="{{tipo2}}">
                </div>
                <div class="pokemonFoto">
                    <img src="./public/image/{{imagen}}" alt="{{nombre}}">
                </div>
                <div>
                    <a href="#">Modificar</a>
                    <a href="./index.php?action=borrar&id_pokemon={{id_pokemon}}">Eliminar</a>
                </div>
            </div>
            </a>
        {{/pokemon}}

    </div>
</div>
